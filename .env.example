# ============================================================
# AI Calling Agent â€” Environment Template
# ============================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!
# ============================================================

# Server
NODE_ENV=development
PORT=3000
HOST=localhost
LOG_LEVEL=info

# Vobiz (Indian Cloud Telephony)
VOBIZ_AUTH_ID=your_auth_id_here
VOBIZ_AUTH_TOKEN=your_auth_token_here
VOBIZ_CALLER_ID=+91XXXXXXXXXX

# OpenAI
OPENAI_API_KEY=sk-your-api-key-here

# MongoDB (Atlas connection string)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/ai_outbound?retryWrites=true&w=majority

# Storage (S3 or Cloudflare R2)
S3_BUCKET=your-bucket-name
S3_REGION=auto
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com/your-bucket

# Cost limits
CALL_MAX_MINUTES=10
CAMPAIGN_MONTHLY_BUDGET=10000

# Real Estate Agent
COMPANY_NAME=Your Company Name
AGENT_NAME=Priya

# System Prompt
SYSTEM_PROMPT_FILE=config/ai_calling_agent_system_prompt.txt

# Language (Multilanguage Support)
# Available: en-IN, hi-IN, ta-IN, te-IN, bn-IN, mr-IN, kn-IN, gu-IN, ml-IN
DEFAULT_LANGUAGE=en-IN
SUPPORTED_LANGUAGES=en-IN,hi-IN,ta-IN,te-IN,bn-IN,mr-IN,kn-IN,gu-IN,ml-IN

# Low-latency TTS + barge-in stability tuning
TTS_MODEL=tts-1
VAD_THRESHOLD=0.01
BARGE_IN_MIN_PLAYBACK_MS=1200
BARGE_IN_REQUIRED_CHUNKS=8
BARGE_IN_RMS_MULTIPLIER=2.2
